@using SimpleCMS.Data.Models;
@using SimpleCMS.Admin;
@model List<Article>
    <div class="NewsContainer">
        <div class="row newsTitlePlace">
            <div class="newsTitle">
                Новини
            </div>
        </div>
        <div class="row newsPhotosTextPlace">
            @foreach(var newsItem in Model)
            {
            <div class="col-sm-12 col-md-6 col-lg-4  newsPhotoPlace">
                <div>
                    <img class="newsPhoto" src="@newsItem.Files">
                </div>
                <div class="col-sm-12 col-md-6 col-lg-4 newsTextPlace">
                    <div class="newsTextContainer">
                       @newsItem.Title
                       @newsItem.SubTitle
                       @newsItem.Content
                    </div>
                </div>
            </div>
            }
            <button class="col-4 allNews">
                Всички новини
            </button>
        </div>
    </div>

