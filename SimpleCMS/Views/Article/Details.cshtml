@{
    <head>
        <link rel="stylesheet" href="~/css/ArticleDetails.css" asp-append-version="true" />
    </head>

    <h1 id="newsPageTitle">@Model.Title</h1>
    <h3 id="newsPageTitle">@Model.SubTitle</h3>


    <div class="conteiner-image">
        <div class="text-center">
            <img src="@Model.Image" class="rounded" alt="news">
        </div>
    </div>

    <div class="card-body">
        <p class="card-text product-information">@Html.Raw(Model.Content)</p>  
    </div>

}
