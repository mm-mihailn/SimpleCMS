@model SimpleCMS.Admin.Models.MenuItemsViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-sm-2">
        <strong>ID:</strong> @Html.DisplayFor(model => model.Id)
    </div>
    <div class="col-sm-10">
        <strong>Title:</strong> @Html.DisplayFor(model => model.Title)
    </div>
    <div class="col-sm-12">
        <strong>Published:</strong> @Html.DisplayFor(model => model.Published)
    </div>
    <div class="col-sm-12">
        <strong>Link:</strong> @Html.DisplayFor(model => model.Link)
    </div>
    <div class="col-sm-12">
        <strong>Parent:</strong> @Html.DisplayFor(model => model.Parent)
    </div>
    <div class="col-sm-12">
        <strong>Parent ID:</strong> @Html.DisplayFor(model => model.ParentId)
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Back to List</a>
</form>
