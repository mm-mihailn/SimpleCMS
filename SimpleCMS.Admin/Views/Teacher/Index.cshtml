@model SimpleCMS.Admin.Models.ViewModel.TeacherViewModel

@{
    ViewData["Title"] = "Teacher Page";
}

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teachers![0].Degree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers![0].SecondName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers![0].Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers![0].Image)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Teachers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Degree)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
