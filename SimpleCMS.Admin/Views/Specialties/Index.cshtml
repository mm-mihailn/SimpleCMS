@model SimpleCMS.Admin.Models.ViewModel.SpecialtieViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(article => article.Specialties![0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(article => article.Specialties![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(article => article.Specialties![0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Specialties)
        {
                <tr>
                         <td>
                    @Html.DisplayFor(specialtieItem => item.Id)
                        </td>
                    <td>
                    @Html.DisplayFor(specialtieItem => item.Name)
                    </td>
                    <td>
                    @Html.DisplayFor(specialtieItem => item.Description)
                    </td>        
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
